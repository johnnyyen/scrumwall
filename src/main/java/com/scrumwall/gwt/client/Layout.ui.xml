<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:scrumwall='urn:import:com.scrumwall.gwt.client.ui'>
  
  <ui:style src="ui/css/layout.css"/>
  
  <g:FlowPanel ui:styleName="{style.wrapper}">
  	<scrumwall:StatusBar ui:field="statusBar"/>
  	<scrumwall:Menu ui:field="menu"/>
  	<scrumwall:Container ui:field="container"/>
  	<scrumwall:Item ui:field="item"/>
  </g:FlowPanel>
</ui:UiBinder>
