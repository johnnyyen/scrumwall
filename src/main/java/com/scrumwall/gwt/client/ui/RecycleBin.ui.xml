<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style type="com.scrumwall.gwt.client.ui.RecycleBin.BinStyle">
		.recycleBin {
			background-image: url('images/trashcan.jpeg');
			width: 100px;
			height: 100px;
			position: absolute;
			bottom: 0;
		}
		
		.highlight{
			width: 110px !important;
			height: 110px !important;
			background-color: yellow;	
		}
	</ui:style>
	<g:FlowPanel ui:field="recycleBin" ui:styleName="{style.recycleBin}">
	</g:FlowPanel>
</ui:UiBinder> 