<?xml version="1.0" encoding="UTF-8"?>
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:scrumwall='urn:import:com.scrumwall.gwt.client.ui'>

	<ui:style src="css/layout.css"/>
	
	<g:FlowPanel ui:styleName="{style.item}">
		<g:TextArea ui:field="content" ui:styleName="{style.itemContent}"/>
		<g:InlineLabel ui:field="contentText" ui:styleName="{style.itemText}"/>
	   	<g:TextBox ui:field="ownerName" ui:styleName="{style.ownerInput}" />
	   	<g:TextBox ui:field="hoursLeft" ui:styleName="{style.hoursLeft}" />
	   	<g:TextBox ui:field="estimate" ui:styleName="{style.estimation}" />
	</g:FlowPanel>
</ui:UiBinder>

