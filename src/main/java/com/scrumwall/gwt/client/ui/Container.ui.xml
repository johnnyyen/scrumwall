<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:scrumwall='urn:import:com.scrumwall.gwt.client.ui'>

	<ui:style>
		.columnContainer {
			width: 89%;
			height: 100%;
			margin-left: 11%;
			min-width: 800px;
			padding: 0px !important;
			border: 1px solid black;
		}
	</ui:style>

	<g:TabLayoutPanel ui:styleName="{style.columnContainer}"
		barHeight="40" barUnit="PX" ui:field="tabContainer">
		<g:tab>
			<g:header>Sprint 1</g:header>
			<g:FlowPanel>
				<scrumwall:Column ui:field="notStarted" />
				<scrumwall:Column ui:field="inProgress" />
				<scrumwall:Column ui:field="done" />
			</g:FlowPanel>
		</g:tab>
		<g:tab>
			<g:header>Sprint 2</g:header>
			<g:Label>test 2</g:Label>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder>
