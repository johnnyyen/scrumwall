<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
           http://www.directwebremoting.org/schema/spring-dwr
           http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">

  <dwr:configuration>
  </dwr:configuration>

  <bean id="itemService" class="com.scrumwall.service.item.ItemServiceImpl">
    <constructor-arg index="0" ref="itemDao" />
    <dwr:remote javascript="ItemService">
      <dwr:include method="saveItem"/>
      <dwr:convert type="bean" class="com.scrumwall.domain.item.Item">
        <dwr:include method="content"/>
        <dwr:include method="id"/>
        <dwr:include method="estimation"/>
      </dwr:convert>
    </dwr:remote>
  </bean>

  <bean id="itemDao" class="com.scrumwall.dao.item.ItemDaoImpl">
    <property name="dataSource">
      <ref bean="dataSource" />
    </property>
  </bean>

</beans>